[manager]
ratio = [1, 4, 3]
sort_by = "alphabetical"
sort_sensitive = false
sort_reverse = false
sort_dir_first = true
sort_translit = false
linemode = "none"
show_hidden = false
show_symlink = true
scrolloff = 5

[preview]
tab_size = 2
max_width = 600
max_height = 900
cache_dir = ""
image_delay = 30
image_filter = "triangle"
image_quality = 75
sixel_fraction = 15
ueberzug_scale = 1
ueberzug_offset = [ 0, 0, 0, 0 ]

[opener]
edit = [
  { run = 'nvim "$@"', block = true, for = "unix" },
]
play = [
  { run = 'mpv "$@"', orphan = true, for = "unix" },
  { run = 'mpv "%*"', orphan = true, for = "windows" },
]
open = [
  { run = 'open "$@"', desc = "Open", for = "macos" },
]

[open]
rules = [
  { name = "*/", use = [ "edit", "open" ] },
  { mime = "text/*", use = [ "edit", "open" ] },
  { mime = "image/*", use = [ "open" ] },
  { mime = "video/*", use = [ "play", "open" ] },
  { mime = "audio/*", use = [ "play" ] },
  { mime = "inode/x-empty", use = [ "edit", "open" ] },
  { mime = "application/json", use = [ "edit", "open" ] },
  { mime = "*/javascript", use = [ "edit", "open" ] },
  { mime = "*", use = [ "open" ] },
]

[tasks]
micro_workers = 10
macro_workers = 25
bizarre_retry = 5
image_alloc = 536870912
image_bound = [ 0, 0 ]
suppress_preload = false
