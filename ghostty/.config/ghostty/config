# Ghostty Configuration

# Show tab bar to see zoom indicator
window-show-tab-bar = always

# Dim unfocused splits for better visual clarity
unfocused-split-opacity = 0.8

# Always pass through Ctrl+h/j/k/l to Neovim, but also perform split navigation
keybind = unconsumed:ctrl+h=goto_split:left
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:ctrl+l=goto_split:right

# Option + arrow keys for split navigation
keybind = alt+down=goto_split:bottom
keybind = alt+up=goto_split:top
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
